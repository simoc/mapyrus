<!-- $Id$ -->
<project name="mapyrus" default="dist" basedir=".">


<!-- Name of class for preprocessing documentation -->
<property name="preprocessor" value="au.id.chenery.mapyrus.Preprocessor"/>


<!-- Name of properties file containing error and status messages -->
<property name="messagefile" value="MapyrusMessages.properties"/>

<target name="init" description="Setup properties">
<loadfile property="version" srcFile="VERSION">
<filterchain><striplinebreaks/></filterchain>
</loadfile>
</target>

<target name="compile" depends="init" description="Compile java source code">
<replace dir="src" token="@software_version_token@" value="${version}" summary="yes"/>
<javac srcdir="src" destdir="build/classes"/>
<copy file="src/${messagefile}" tofile="build/classes/${messagefile}"/>
</target>


<target name="jar" depends="compile" description="Build jar file from classes">
<jar jarfile="${ant.project.name}.jar" basedir="build/classes" manifest="manifest"/>
</target>

<target name="jni" depends="compile" description="Build JNI shared libraries">
<javah class="au.id.chenery.mapyrus.WorldCoordinateTransform" destdir="jni" classpath="build/classes"/>
<exec executable="gcc" dir="jni" os="Linux">
<arg line="-c -I${java.home}/../include -I${java.home}/../include/linux -I. -fPIC -shared -o libmapyrusproj.so projinterface.c"/>
</exec>
<exec executable="gcc" dir="jni" os="SunOS">
<arg line="-c -I${java.home}/../include -I${java.home}/../include/sunos -I. -fPIC -G -o libmapyrusproj.so projinterface.c"/>
</exec>
</target>

<target name="doc" depends="jar" description="Build documentation and examples">
<!-- Delete -->
<delete>
<fileset dir="doc" includes="*.html"/>
<fileset dir="doc" includes="*.png" excludes="mapyrus.png,sampleurl.png"/>
</delete>
<copy file="VERSION" todir="doc"/>

<!-- Generate all examples, doing tutorial examples separately so
it is not necessary to show path being cleared in each example -->
<java jar="${ant.project.name}.jar" fork="yes" dir="doc">
<arg line="contact.mpy turtle1.mpy turtle2.mpy turtle3.mpy turtle4.mpy turtle5.mpy mapview1.mpy mapview2.mpy mapview3.mpy mapview4.mpy"/>
</java>
<java jar="${ant.project.name}.jar" fork="yes" dir="doc">
<arg line="tutorialfirst1.mpy"/>
</java>
<java jar="${ant.project.name}.jar" fork="yes" dir="doc">
<arg line="tutorialfirst2.mpy"/>
</java>
<java jar="${ant.project.name}.jar" fork="yes" dir="doc">
<arg line="tutorialfirst3.mpy"/>
</java>
<java jar="${ant.project.name}.jar" fork="yes" dir="doc">
<arg line="tutorialvar1.mpy"/>
</java>
<java jar="${ant.project.name}.jar" fork="yes" dir="doc">
<arg line="tutoriallines1.mpy tutoriallines2.mpy tutoriallines3.mpy tutoriallines4.mpy tutoriallines5.mpy tutorialpolygons1.mpy tutorialpolygons2.mpy tutorialpolygons3.mpy tutorialpolygons4.mpy tutorialprocedures1.mpy tutorialprocedures2.mpy tutoriallabels1.mpy tutoriallabels2.mpy tutorialdatasets1.mpy tutorialdatasets2.mpy tutorialdatasets3.mpy"/>
</java>
<java jar="${ant.project.name}.jar" fork="yes" dir="doc">
<arg line="tutorialrand1.mpy tutorialrand2.mpy tutorialrand3.mpy"/>
</java>

<!-- Use preprocessor inside Mapyrus which expands macros in -->
<!-- documentation to generate final HTML files -->
<java classname="${preprocessor}" classpath="${ant.project.name}.jar" fork="yes" dir="doc">
<arg line="index.doc index.html"/>
</java>

<java classname="${preprocessor}" classpath="${ant.project.name}.jar" fork="yes" dir="doc">
<arg line="intro.doc intro.html"/>
</java>

<java classname="${preprocessor}" classpath="${ant.project.name}.jar" fork="yes" dir="doc">
<arg line="tutorial.doc tutorial.html"/>
</java>

<java classname="${preprocessor}" classpath="${ant.project.name}.jar" fork="yes" dir="doc">
<arg line="reference.doc reference.html"/>
</java>

<java classname="${preprocessor}" classpath="${ant.project.name}.jar" fork="yes" dir="doc">
<arg line="version.doc version.html"/>
</java>

<java classname="${preprocessor}" classpath="${ant.project.name}.jar" fork="yes" dir="doc">
<arg line="license.doc license.html"/>
</java>
<delete file="doc/VERSION"/>

</target>


<target name="dist" depends="init, jar, doc, jni" description="Build package for distribution">
<!-- Build zip file with everything -->
<zip destfile="${ant.project.name}-${version}.zip" update="false">
<fileset dir="." excludes="**/CVS, build/classes/**, *.zip, .project, .classpath"/>
</zip>
</target>


<target name="clean" description="Remove everything we have built">
<delete dir="build/classes" includes="**/*.class"/>
<delete file="${ant.project.name}.jar"/>
<delete>
<fileset includes="${ant.project.name}*.zip"/>
<fileset dir="doc" includes="*.html, *.png" excludes="mapyrus.png"/>
<fileset dir="jni" excludes="*.c"/>
</delete>
</target>

</project>

