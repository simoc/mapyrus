# @(#) $Id$
begin sunray
	color "yellow"
	move 0, 3
	draw 3, 0, 0, -3, 0, 3
	fill
end
begin sun
	# Draw orange circle for sun
	move -8, 0
	arc 1, 0, 0, -8, 0
	color "rgb", 1, 0.6, 0
	fill
	# Draw 8 rays pointing out from perimeter of circle
	i = 0
	while i < 8
	do
		clearpath
		rotate 360 / 8
		move 9, 0
		sunray
		i = i + 1
	done
end
