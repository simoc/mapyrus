begin spike
  move -1, 0
  let spikeCounter = spikeCounter + 1
  if spikeCounter % 2 == 0
  then
    draw 0, -3, 1, 0
  else
    draw 0, -6, 1, 0
  endif
  fill
end

newpage "eps", "tutoriallines2.eps", 60, 30
clearpath
move 5, 5
bezier 5, 30, 55, 5, 55, 25
stroke
samplepath 5, 2.5
let spikeCounter = 0
spike
