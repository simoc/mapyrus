begin hatch45
  clip
  stripepath 2, 45
  stroke
end
begin hatchMinus45
  clip
  stripepath 2, -45
  stroke
end
begin crosshatch
  linestyle 0.01
  color "red"
  stroke
  hatch45
  hatchMinus45
end

newpage "eps", "tutorialpolygons2.eps", 60, 30
clearpath
move 5, 5
draw 45, 5, 45, 25, 30, 25, 30, 20, 35, 20, 35, 10
draw 20, 10, 20, 25, 10, 25, 5, 5
crosshatch
